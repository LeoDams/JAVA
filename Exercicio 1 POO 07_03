

package exercicio.pkg1;

import java.util.*; 

public class Exercicio1 {


    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int alcool = 0, gasolina = 0, diesel = 0, num = 0;
        
         do {
        System.out.println("Digite o tipo de combustivel que vocÃª usa ");
        System.out.println(" [ 1 ] - Alcool");
        System.out.println(" [ 2 ] - Gasolina");
        System.out.println(" [ 3 ] - Diesel");
        System.out.println(" [ 4 ] - Encerra");
        num = in.nextInt();
        switch (num)
        {
            case 1: 
                alcool++;
                break;
            case 2:
                gasolina++;
                break;
            case 3:
                diesel++;
                break;
            case 4:
                System.out.println("Alcool = "+alcool);
                System.out.println("Gasolina = "+gasolina);
                System.out.println("Diesel = "+diesel);
                break;
            default:
                System.out.println("Por favor digite uma opcao valida");
                break;
        }
        }while (num!=4);
 }}
