public class BalancoTrimestral {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {

        int jan = 15000;
        int fev = 23000;
        int mar = 17000;
        int tri = jan + fev + mar;
        double med = tri/3;
        System.out.println("Valor do trimestre = " + tri);
        System.out.println("Valor da mÃ©dia mensal = " + med);
        if (tri > 50000) {
            System.out.println("Quebrou a meta");
        } else {
            System.out.println("Dentro da meta");
        }
        }
    }
